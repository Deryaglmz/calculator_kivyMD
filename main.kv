<MDFloatLayout>:
    size_hint: 1, 1

<MainScreen>:
    name: "mainScreen"
    MDFloatLayout:
        size_hint: None, None
        size: root.size
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDCard:
            size_hint: 0.95, 0.95 
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            md_bg_color: [0.4, 0.427, 0.466, 1]
            
            MDFloatLayout:
                size_hint: 1, 1
                
                MDCard:
                    size_hint: 0.9, 0.1
                    pos_hint: {"center_x": 0.5, "center_y": 0.85} 
                    md_bg_color: [0.5804, 0.6000, 0.6196, 1]
                    radius: [25, 25, 25, 25]

                    BoxLayout:
                        #size_hint_y: None
                        #height: self.minimum_height

                        MDLabel:
                            id:calculatorResult
                            text: "0"
                            halign: "right"
                            valign: "middle"
                            pos_hint: {"center_x": 0.4, "center_y": 0.6}
                            font_size: "25sp"


                MDCard:
                    size_hint: None, None
                    height: dp(350)
                    width: dp(250)
                    pos_hint: {"center_x": 0.35, "center_y": 0.4}
                    md_bg_color: [0.5804, 0.6000, 0.6196, 1]
                    radius: [25, 25, 25, 25]

                    MDFloatLayout:
                        size_hint: 1, 1
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        
                        MDRectangleFlatButton:
                            style: "text"
                            text: "7"
                            size_hint: 0.15, 0.15
